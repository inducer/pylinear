.PHONY	: all install clean tags

all: tags
        if test "x${COMPILE_DASKR}" = "xTrue"; then \
	  (cd fortran/daskr; ./build.sh) ; \
	fi
	${PYTHON_EXE} setup.py build

install: tags
	${PYTHON_EXE} setup.py install

clean:
	if test "x${COMPILE_DASKR}" = "xTrue"; then \
	  (cd fortran/daskr; ./clean.sh) ; \
	fi
	rm -Rf build
	rm -f tags

tags:
	ctags -R src || true
